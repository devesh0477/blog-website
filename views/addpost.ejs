<div class="wrapper">
    <%- include('header'); %> 
    <main class="container flex-fill">
        <form class="newpost" action="/addpost" method="post">
            <div class="form-group">
                <label for="title">Title</label>
                <textarea class="form-control" id="title" rows="1" name="posttitle"></textarea>
              </div>

              <div class="form-group">
                <label for="body">Content</label>
                <textarea class="form-control" id="content" rows="20" name="postcontent"></textarea>
              </div>
              <div class="submit-button">
              <button type="button" class="btn btn-outline-success my-2 my-sm-0" data-toggle="modal" data-target="#publishalertmodal">Submit</button>
  
  <!-- Modal -->
  <div class="modal fade" id="publishalertmodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Do you wish to publish?</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Once published article will be property of B-Blog and can only be removed by B-Blog editors team.
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">No.</button>
          <button type="submit" class="btn btn-primary">Yes!</button>
        </div>
      </div>
    </div>
  </div>
            </div>
        </form>
    </main>
    <%- include('footer'); %> 
</div>
